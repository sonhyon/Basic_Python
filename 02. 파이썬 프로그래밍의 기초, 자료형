#사칙연산
a**b #제곱
7%3 #나눗셈 후 나머지 값 리턴
7/4 #나누셈 후 몫 리턴

"Hello Wrold" #문자열 표시
say='"python is very easy" he says' #문자열 안 큰따음표 포함
food='Python\'s favorite food is perl' #역슬래시 사용해 따옴표를 문자열에 포함

multilnie="Life is too short\nYou need python" #\n은 줄을 바꿈

head="Python"
tail="is fun"
head+tail #문자열 더해서 연결
2*head #문자열 곱하기
len(head) #문자열 길이 구하기

#"파이썬은 0부터 숫자를 센다"

a="Life is too short, You need Python"
a[0]
a[-0] #a[0]가 똑같음
a[-2] #뒤에서 두 번째 문자

a[0:5] #문자열 슬라이싱

"I eat %d apples" %3 #문자열 포매팅
"I eat %s apples" %"five"

"%10s" % "hi" #공백8개 + hi
"0.4f" % 3.42134234 #소수점 표현하기
"I eat {0} apples". format(3) #숫자, 문자열 대입 가능

name = '홍길동'
